{
    "name": "nodejs-project",
    "version": "1.0.0",
    "license": "GPL-3.0",
    "scripts": {
        "prepare": "husky install",
        "preinstall": "test -f .env || cp -n .env.example .env",
        "prebuild": "rimraf build/",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "start": "node build/src/index.js",
        "start:dev": "nodemon -e js --exec node --require dotenv/config --inspect=9229 build/src/index.js",
        "format": "prettier --ignore-unknown --ignore-path .gitignore --write .",
        "lint": "eslint --ext .js,.ts src/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com:coders-camp-2021-best-team/nodejs-project.git"
    },
    "dependencies": {
        "rimraf": "^3.0.2"
    },
    "devDependencies": {
        "@types/node": "^17.0.18",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "dotenv": "^16.0.0",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.4",
        "lint-staged": ">=10",
        "prettier": "^2.5.1",
        "typescript": "^4.5.5"
    },
    "engines": {
        "npm": "please-use-yarn",
        "yarn": ">= 1.19.1"
    }
}
