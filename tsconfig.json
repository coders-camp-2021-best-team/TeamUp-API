{
    "compilerOptions": {
        "outDir": "build",
        "module": "CommonJS",
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "inlineSources": true,
        "inlineSourceMap": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "strict": true,
        "strictPropertyInitialization": false
    },
    "include": ["src/**/*", "package.json"]
}
